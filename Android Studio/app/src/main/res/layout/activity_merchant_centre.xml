<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".views.profile.merchant.MerchantCentreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_back_arrow"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Merchant Centre"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <Button
                android:id="@+id/btnMerchantVerification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary"
                android:text="MERCHANT AUTHORISATION"
                android:textColor="#000"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnMerchantBusinessHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MODIFY BUSINESS HOUR"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnMerchantClosingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPECIAL CLOSING DATES"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>